<?xml version="1.0"?>
<robot name="template">

    <gazebo reference="base">
        <material>Gazebo/Red</material>
    </gazebo>
    <gazebo reference="link1">
        <material>Gazebo/DarkGrey</material>
    </gazebo>

    <!--World & Base -->	
    <link name="world">
    </link> 
    <joint name="base_joint" type="fixed">
        <origin xyz="0 0 0" rpy="0 1.57 0"/> 
        <parent link="world"/>
        <child link="base"/>
        <axis xyz="0 0 0"/>
    </joint>
    <link name="base">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="1.0"/>
            <inertia ixx="0.1" iyy="0.1" izz="0.1" ixy="0" ixz="0" iyz="0"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.055" radius="0.03"/>
            </geometry> 
        </visual>
    </link> 

    <!--First Joint & Link  --> 
    <joint name="joint" type="revolute">
        <origin xyz="0 0 0.035" rpy="0 0 0"/> 
        <parent link="base"/>
        <child link="link"/>
        <limit effort="300" velocity="100" lower="-3.14" upper="3.14" />
        <dynamics damping="0.02" friction="0.0"/>
        <axis xyz="0 0 1"/>
    </joint> 
    <link name="link">
        <inertial>
            <origin xyz="0 0.04 0" rpy="0 0 0"/>
            <mass value="0.5"/>
            <inertia ixx="0.001" iyy="0.001" izz="0.002" ixy="0" ixz="0" iyz="0"/>
        </inertial>
		<visual>
            <origin xyz="0 0.04 0" rpy="0 0 0"/>
            <geometry>
				<box size="0.025 0.08 0.01"/>
            </geometry>	
        </visual>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.01" radius="0.0125"/>
            </geometry> 
        </visual>
    </link>

    <!-- Custom plugin inseriton -->
