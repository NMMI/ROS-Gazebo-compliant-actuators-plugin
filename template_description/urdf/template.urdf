        </plugin>
    </gazebo> -->

    <gazebo>
        <plugin name="compliant_act_j1" filename="libsea_plugin.so">
            <joint>joint</joint>
            <operation_mode>4</operation_mode>
            <pub_eltau>true</pub_eltau>
            <pub_state>true</pub_state>
            <sub_ext_tau>false</sub_ext_tau>
        </plugin>
    </gazebo>

